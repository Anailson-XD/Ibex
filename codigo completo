def listar_pedidos_pendentes():
    con = sqlite3.connect('ibex.db')
    cursor = con.cursor()

    cursor.execute('''
        SELECT pedidos.id, cliente.nome, pedidos.descricao
        FROM pedidos
        JOIN cliente ON pedidos.cliente_id = cliente.id
        WHERE pedidos.status = "pendente"
    ''')

    pedidos = cursor.fetchall()
    con.close()

    if not pedidos:
        print('Nenhum pedido pendente.')
        return

    print('\nPedidos pendentes:')
    for id, nome_cliente, descricao in pedidos:
        print(f'ID: {id} | Cliente: {nome_cliente} | Descri√ß√£o: {descricao}')

def concluir_pedido():
    id_pedido = int(input('Digite o ID do pedido que deseja marcar como conclu√≠do: '))
    con = sqlite3.connect('ibex.db')
    cursor = con.cursor()

    cursor.execute('''
        SELECT * FROM pedidos
        WHERE id = ? AND colaborador_login = ? AND status = "aceito"
    ''', (id_pedido, colaborador_logado))

    if cursor.fetchone() is None:
        print('Pedido n√£o encontrado ou n√£o est√° em andamento.')
    else:
        cursor.execute('''
            UPDATE pedidos
            SET status = "conclu√≠do"
            WHERE id = ?
        ''', (id_pedido,))
        con.commit()
        print('Pedido marcado como conclu√≠do.')

    con.close()

def solicitar_servicos():
    global cliente_logado
    if cliente_logado is None:
        print("Voc√™ precisa estar logado para atualizar seus dados.")
        input("Pressione ENTER para voltar...")
        return
    
    opcao = 0
    while opcao != 9:
        exibir_subtitulo('Solicita√ß√£o de Servi√ßos')
        print('1. Criar novo pedido')
        print('2. Ver meus pedidos')
        print('9. Sair')

        try:
            opcao = int(input('Escolha uma op√ß√£o: '))
        except ValueError:
            print('Op√ß√£o inv√°lida! Digite um n√∫mero.')
            continue

        if opcao == 1:
            criar_pedido()
        elif opcao == 2:
            ver_pedidos_cliente()
        elif opcao == 9:
            print('Saindo do menu de servi√ßos...')
        else:
            print('Op√ß√£o inv√°lida.')

        input('\nPressione ENTER para continuar...')

def criar_pedido():
    descricao = input('Descreva o servi√ßo que voc√™ precisa: ')
    status = 'pendente'
    con = sqlite3.connect('ibex.db')
    cursor = con.cursor()

    cursor.execute('SELECT id FROM cliente WHERE login = ?', (cliente_logado,))
    resultado = cursor.fetchone()

    if resultado:
        cliente_id = resultado[0]
        cursor.execute('''
            INSERT INTO pedidos (cliente_id, descricao, status)
            VALUES (?, ?, ?)
        ''', (cliente_id, descricao, status))
        con.commit()
        print('Pedido criado com sucesso!')
    else:
        print('Erro: cliente n√£o encontrado.')

    con.close()

def ver_pedidos_cliente():
    con = sqlite3.connect('ibex.db')
    cursor = con.cursor()
    cursor.execute('SELECT id FROM cliente WHERE login = ?', (cliente_logado,))
    resultado = cursor.fetchone()

    if resultado:
        cliente_id = resultado[0]

        cursor.execute('''
            SELECT id, descricao, status, colaborador
            FROM pedidos
            WHERE cliente_id = ?
        ''', (cliente_id,))
        pedidos = cursor.fetchall()

        if not pedidos:
            print('Voc√™ ainda n√£o fez nenhum pedido.')
        else:
            print('\nSeus pedidos:')
            for id, descricao, status, colaborador in pedidos:
                print(f'ID: {id} | Descri√ß√£o: {descricao} | Status: {status} | Colaborador: {colaborador}')
    else:
        print('Erro ao localizar cliente.')

    con.close()


