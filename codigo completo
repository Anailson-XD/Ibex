def ver_meus_pedidos():
    con = sqlite3.connect('ibex.db')
    cursor = con.cursor()

    cursor.execute('''
        SELECT pedidos.id, cliente.nome, pedidos.descricao, pedidos.status
        FROM pedidos
        JOIN cliente ON pedidos.cliente_id = cliente.id
        WHERE colaborador = ?
    ''', (colaborador_logado,))

    pedidos = cursor.fetchall()
    con.close()

    if not pedidos:
        print('Voc√™ ainda n√£o aceitou nenhum pedido.')
        return

    print('\nMeus pedidos:')
    for id, nome_cliente, descricao, status in pedidos:
        print(f'ID: {id} | Cliente: {nome_cliente} | Descri√ß√£o: {descricao} | Status: {status}')


